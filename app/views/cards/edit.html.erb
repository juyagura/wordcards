<div class="page-header">
  <h1>Edit Card #<%= @card.id %></h1>
</div>

<% if @card.errors.any? %>
  <% @card.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_card/<%= @card.id %>" class="form-horizontal">
  <!-- Label and input for word -->
  <div class="form-group">
    <label for="word" class="col-sm-2 control-label">
      Word
    </label>
    <div class="col-sm-10">
      <input type="text" id="word" name="word" placeholder="Word" class="form-control" value="<%= @card.word %>">
    </div>
  </div>

  <!-- Label and input for definition -->
  <div class="form-group">
    <label for="definition" class="col-sm-2 control-label">
      Definition
    </label>
    <div class="col-sm-10">
      <textarea id="definition" name="definition" placeholder="Definition" class="form-control" rows="3"><%= @card.definition %></textarea>
    </div>
  </div>

  <!-- Label and input for learned -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label for="learned">
          <input type="checkbox" id="learned" name="learned" value="1" <%= "checked" if @card.learned %>>
          Learned
        </label>
      </div>
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @card.user_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Card" class="btn btn-primary">
    </div>
  </div>
</form>
