<div class="page-header">
  <h1>Cards</h1>
</div>

<p><a href="/cards/new" class="btn btn-primary">Add a New Card</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td>
          <a href="/cards/<%= card.id %>">
            <strong><%= card.word.titleize %></strong>
          </a>
        </td>
        <td>
          <% if card.learned == true %>
            <a href="/cards/<%= card.id %>/unlearn" class="btn btn-default">
              Unlearn
            </a>
          <% else %>
            <a href="/cards/<%= card.id %>/learned" class="btn btn-success">
              Learned
            </a>
          <% end %>
        </td>
        <td>
          <a href="/cards/<%= card.id %>/edit" class="btn btn-warning">
            Edit
          </a>
        </td>
        <td>
          <a href="/delete_card/<%= card.id %>" class="btn btn-danger">
            Delete
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

